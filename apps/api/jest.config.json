{
  "preset": "@repo/jest-presets/node",
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
  "testMatch": ["**/__tests__/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/__tests__/**",
    "!src/db/schema/**"
  ],
  "testTimeout": 30000,
  "detectOpenHandles": true,
  "forceExit": true,
  "maxWorkers": 1
}
