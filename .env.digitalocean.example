# DigitalOcean Deployment Environment Variables
# Copy this to .env in your droplet and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your-super-secure-password-here
POSTGRES_USER=questly
DATABASE_URL=postgresql://questly:your-super-secure-password-here@localhost:5432/questly

# Authentication Secrets
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-long
BETTER_AUTH_SECRET=another-super-secret-key-for-better-auth-64-chars

# Application Configuration
NODE_ENV=production
PORT=8080

# URLs (replace with your actual domain)
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (if using)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
